{
  "name": "micro-api-router",
  "description": "Micro middleware to standardise API microservices",
  "version": "1.0.0",
  "main": "lib/index.js",
  "author": "James Carr <james@jacarr.me>",
  "repository": "https://github.com/jamesacarr/micro-api-router",
  "bugs": "https://github.com/jamesacarr/micro-api-router/issues",
  "license": "MIT",
  "scripts": {
    "metrics": "xo --fix",
    "metrics:ci": "xo",
    "precommit": "lint-staged",
    "test": "jest",
    "test:ci": "jest --ci --testResultsProcessor=\"jest-junit\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/__mocks__/**",
      "!**/node_modules/**",
      "!coverage/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn metrics",
      "git add",
      "yarn test --findRelatedTests"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "env": [
      "es6",
      "jest",
      "node"
    ]
  },
  "peerDependencies": {
    "micro": "^9.1.4"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-junit": "^3.6.0",
    "lint-staged": "^7.0.0",
    "micro": "^9.1.4",
    "xo": "^0.21.0"
  },
  "dependencies": {
    "boom": "^7.2.0",
    "deepmerge": "^2.1.0",
    "url": "^0.11.0",
    "url-pattern": "^1.0.3",
    "uuid": "^3.2.1"
  }
}
